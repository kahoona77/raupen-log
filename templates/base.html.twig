<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Raupen Log</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ relative_path(asset('images/apple-touch-icon.png')) }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ relative_path(asset('images/favicon-32x32.png')) }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ relative_path(asset('images/favicon-16x16.png')) }}">
        <link rel="manifest" href="{{ relative_path(asset('manifest.json')) }}">
        <link rel="mask-icon" href="{{ relative_path(asset('images/safari-pinned-tab.svg')) }}" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">

        {% for css in encore_entry_css_files('app') %}
            <link rel="stylesheet" href="{{ css }}">
        {% endfor %}

        {% for script in encore_entry_js_files('app') %}
            <script src="{{ script }}" defer=""></script>
        {% endfor %}
    </head>
    <body>
        <div class="nav-bar">
            <div class="nav-main">Raupen Log</div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="nav-right">

                <a href="{{ path('app_logout') }}" class="icon small">
                    <span>{{ app.user.displayName }}</span>
                    <svg>
                        <use xlink:href="images/solid.svg#sign-out-alt"></use>
                    </svg>
                </a>
            </div>
            {% endif %}
        </div>
        <div>

        </div>
        <div class="content">

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
